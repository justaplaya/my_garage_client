{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "watch": true,
    "allowJs": true,
    "outDir": "out",
    "noEmit": true,
    "baseUrl": "src",
    "strictNullChecks": true
  },
  "types": ["@types/node", "@nuxt/types", "@types/jest", "nuxt-i18n"],
  "include": ["src/**/*"],
  "exclude": ["node_modules/*","out"]
}